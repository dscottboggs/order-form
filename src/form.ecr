<!DOCTYPE html>
<html>

<head>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <title>
    <%= config.site_title || "Order Form" %>
  </title>
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bulma@0.9.3/css/bulma.min.css">
</head>

<body>
  <section class="section" id="products">
    <form action="/order" method="post">
      <% config.products.each do |product| %>
        <div class="field">
          <label for="<%= product.name %>" class="label">
            <%= product.description %>
          </label>
          <div class="control">
            <input type="number" name="<%= product.name %>" id="<%= product.name %>_input" class="input" min=0 max=5 />
          </div>
        </div>
        <% end %>

          <div class="field">

          </div>
    </form>
  </section>
</body>

</html>